<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AliadaTheme" parent="AppTheme">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <!-- TextView -->

    <style name="TxtToolbarTitle" parent="@android:style/Widget.TextView">
        <item name="android:textColor">@color/white</item>
        <item name="android:gravity">left|center</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="TxtToolbarSubTitle" parent="@android:style/Widget.TextView">
        <item name="android:textColor">@color/white</item>
        <item name="android:gravity">left|top</item>
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="TxtLogInEmail" parent="@android:style/Widget.TextView">
        <item name="android:textColor">@color/white</item>
        <item name="android:gravity">left|center</item>
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="TxtServicesItemCategory" parent="@android:style/Widget.TextView">
        <item name="android:textColor">@color/textPrimary</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_marginLeft">5dp</item>
        <item name="android:textSize">17sp</item>
    </style>
    <style name="TxtServicesItemDetail" parent="@android:style/Widget.TextView">
        <item name="android:textColor">@color/textSecondary</item>
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:textSize">15sp</item>
    </style>

    <style name="TxtLogInPassword" parent="@android:style/Widget.EditText">
        <item name="android:textColor">@color/white</item>
        <item name="android:textColorHint">@color/white_60</item>
        <item name="android:gravity">left|center</item>
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:textSize">16sp</item>
    </style>


    <!-- Button -->

    <style name="BtnLogIn" parent="@android:style/Widget.Button">
        <item name="android:textColor">@color/white</item>
        <item name="android:gravity">center</item>
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:textSize">16sp</item>
    </style>
</resources>
