<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.freakybyte.aliadatest">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".TestApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AliadaTheme">
        <activity
            android:name=".controller.splash.SplashActivity"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".controller.services.ui.ServicesActivity"
            android:screenOrientation="portrait"></activity>
        <activity
            android:name=".controller.login.ui.LogInActivity"
            android:screenOrientation="portrait"></activity>
    </application>

</manifest>